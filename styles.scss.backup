    font-family: "GuardianTextEgyp";
    src: url("../assets/font/GuardianTextEgyp-RegularIt_2.ttf") format("truetype");
    font-weight: 400;
    font-style: italic;
    font-display: swap;
}

@font-face {
    font-family: "GuardianTextEgyp";
    src: url("../assets/font/GuardianTextEgyp-Medium.ttf") format("truetype");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: "GuardianTextEgyp";
    src: url("../assets/font/GuardianTextEgyp-MediumIt.ttf") format("truetype");
    font-weight: 500;
    font-style: italic;
    font-display: swap;
}

@font-face {
    font-family: "GuardianTextEgyp";
    src: url("../assets/font/GuardianTextEgyp-Bold_2.ttf") format("truetype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: "GuardianTextEgyp";
    src: url("../assets/font/GuardianTextEgyp-BoldIt_2.ttf") format("truetype");
    font-weight: 700;
    font-style: italic;
    font-display: swap;
}

@font-face {
    font-family: "GuardianTextEgyp";
    src: url("../assets/font/GuardianTextEgyp-Black.ttf") format("truetype");
    font-weight: 900;
    font-style: normal;
    font-display: swap;
